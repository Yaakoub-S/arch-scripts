#!/bin/sh

usage() {
	echo "Usage: $0 [KEYMAP]"
	echo
	echo "Set the system keymap using localectl."
	echo "If no KEYMAP is provided, defaults to '$KEYMAP'."
	echo "Use -h or --help to display this message."
	exit 0
}

. /usr/share/lib/arch-scripts || exit 1

check_root

KEYMAP="mod-dh-iso-us"

if [ $# -eq 1 ]; then
	case "$1" in
	-h | --help)
		usage
		;;
	*)
		KEYMAP="$1"
		;;
	esac
fi

localctl set-keymap "$KEYMAP"
